---
import "./src/styles/global.css";
---

<!doctype html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Machine Learning Python Cheat Sheet</title>
  </head>
  <body>
    <slot />
    <img
      class="pattern-bottom-left"
      src="./bg-blue.svg"
      alt="background-pattern-bottom-left-blue"
    />
    <img
      class="pattern-top-right"
      src="./bg-purple.svg"
      alt="background-pattern-top-right-purple"
    />
  </body>
</html>

<style>
  :root {
    --color-background: #101927;
    --sb-track-color: #364153;
    --sb-thumb-color: #626873;
    --sb-size: 8px;
  }
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  html {
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }
  body {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    background-color: var(--color-background);
    position: relative;
    overflow: hidden;
  }
</style>
