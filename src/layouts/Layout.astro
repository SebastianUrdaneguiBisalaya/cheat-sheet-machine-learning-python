---
import "./src/styles/global.css";
import "@fontsource-variable/lexend";
import { ClientRouter } from "astro:transitions";
import NavbarMobile from "@components/NavbarMobile.astro";
---

<!doctype html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Machine Learning Python Cheat Sheet</title>
    <ClientRouter />
  </head>
  <body
    class="m-0 p-0 w-full min-h-screen flex flex-col items-center bg-background overflow-y-auto"
  >
    <slot />
    <div
      id="container-sidebar-mobile"
      class="fixed inset-0 z-50 lg:hidden overflow-y-auto scrollbar backdrop-blur hidden"
      role="dialog"
    >
      <NavbarMobile />
    </div>
  </body>
</html>

<style>
  :root {
    --color-background: #18191a;
    --color-blue-strong: #38BDF8;
    --sb-track-color: #364153;
    --sb-thumb-color: #626873;
    --sb-size: 8px;
  }
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  html {
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }
</style>
